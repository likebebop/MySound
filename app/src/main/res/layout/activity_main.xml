<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.likebebop.mysound.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/vibrate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="11dp"
        android:elevation="0dp"
        android:text="vibrate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"/>


    <Button
        android:id="@+id/load_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="load"
        app:layout_constraintLeft_toLeftOf="@+id/vibrate_btn"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vibrate_btn"/>

    <Button
        android:id="@+id/load2_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="load2"
        android:layout_marginStart="8dp"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/load_btn"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/load_btn"/>

    <Button
        android:id="@+id/load3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load3"
        app:layout_constraintLeft_toRightOf="@+id/load2_btn"
        android:layout_marginLeft="15dp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/load_btn"/>


    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        app:layout_constraintLeft_toLeftOf="@+id/load_btn"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/load_btn"/>

    <Button
        android:id="@+id/play_loop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play loop"
        app:layout_constraintLeft_toRightOf="@+id/play_btn"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/play_btn"
        tools:layout_constraintBaseline_creator="1"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        app:layout_constraintLeft_toRightOf="@+id/play_loop_btn"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/play_btn"
        tools:layout_constraintBaseline_creator="1"/>

    <Button
        android:id="@+id/release_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="release"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/play_btn"
        app:layout_constraintTop_toBottomOf="@+id/play_btn"/>


</android.support.constraint.ConstraintLayout>
